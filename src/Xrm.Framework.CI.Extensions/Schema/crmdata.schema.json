{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "JSON Schema for crm data files",
	"description": "schema for TCorpIM Transaction File",
	"self": {
		"name": "CrmData",
		"format": "http://json-schema.org/draft-07/schema#",
		"version": "1-0-0"
	},
	"properties": {
		"schema": {
			"type": "string",
			"enum": ["https://github.com/malachyoc/xrm-ci-framework/tree/master/MSDYNV9/Xrm.Framework.CI/Xrm.Framework.CI.DataOperations/schema/crmdata.schema.json"]
		},
		"schemaFormat": {
			"type": "string",
			"enum": ["http://json-schema.org/draft-07/schema#"]
		},
		"schemaVersion": {
			"type": "string",
			"enum": ["1-0-0"]
		},
		"Entities": {
			"type": "array",
			"additionalItems": false,
			"items": {

						"$ref": "#/definitions/EntityTarget"
				
			}
		}
	},
	"required": ["entities"]
	,
  "definitions": {
    "EntityTarget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "LogicalName": {
          "type": "string"
        },
        "Id": {
          "$ref": "#/definitions/Guid"
        },
        "Attributes": {},
        "Operation": {
          "type": "string",
          "enum": ["delete", "create", "update", "upsert"]
        }

      },
      "required": [ "id", "logicalname"]
    },
    "Guid": {
      "type ": "string",
      "pattern": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "length": 36
    }
  }
}
